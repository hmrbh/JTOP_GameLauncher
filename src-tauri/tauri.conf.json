{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "JTOP Game Launcher",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "systemTray": {
      "iconPath": "icons/logo.ico",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "JTOP Game Launcher",
        "width": 1200,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.jtopgamelauncher.app",
      "icon": [
        "icons/logo.ico"
      ]
    }
  }
}
